<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="290dp"
        android:background="@drawable/shape_btn_anhei"
        android:orientation="vertical">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/ll_guanbi"
            android:layout_marginTop="@dimen/item_offset_14dp"
            android:layout_width="@dimen/item_offset_40dp"
            android:layout_height="@dimen/item_offset_40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_gb_15"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_choose"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置金额"
                android:layout_marginTop="@dimen/item_offset_24dp"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/item_offset_17sp" />


            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/item_offset_16dp"
                android:layout_marginRight="@dimen/item_offset_16dp"
                android:layout_marginTop="@dimen/item_offset_20dp"
                android:layout_height="@dimen/item_offset_1dp"
                android:background="@color/color_888888"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_offset_50dp"
                android:layout_marginTop="@dimen/item_offset_40dp"
                android:layout_marginRight="@dimen/item_offset_16dp"
                android:layout_marginLeft="@dimen/item_offset_16dp"
                android:background="@drawable/shape_btn_white">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额"
                    android:layout_marginLeft="@dimen/item_offset_18dp"
                    android:textColor="@color/color_888888"
                    android:textSize="@dimen/item_offset_17sp" />




                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/color_888888"
                    android:layout_marginLeft="@dimen/item_offset_20dp"
                    android:inputType="number"
                    android:hint="0.00"
                    android:textColor="@color/color_222222"
                    android:background="@null" />


            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_below="@+id/ll_choose"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:background="@mipmap/img_qr_5"/>







    </RelativeLayout>


</LinearLayout>