<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_131e31">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_offset_54dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_offset_15dp"
            android:layout_marginTop="@dimen/item_offset_6dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李松"
                android:textColor="@color/white"
                android:textSize="@dimen/item_offset_16dp" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-02-03"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/item_offset_12sp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_zhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+125"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_offset_15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/item_offset_13sp"
            />

    </RelativeLayout>

</LinearLayout>