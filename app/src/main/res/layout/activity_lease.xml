<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_061625">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@mipmap/bg_14">

                <RelativeLayout
                    android:id="@+id/rl_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_offset_20dp"
                    android:layout_alignParentLeft="true"
                  >

                    <ImageView
                        android:id="@+id/iv_left"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:src="@mipmap/nav_back_3"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="@dimen/item_offset_15dp" />

                    <TextView
                        android:id="@+id/tv_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="租赁计划"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_offset_17sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_left" />
                </RelativeLayout>



            </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/item_offset_100dp"
            android:layout_height="@dimen/item_offset_140dp"
            android:layout_marginRight="@dimen/item_offset_15dp"
            android:layout_marginLeft="@dimen/item_offset_15dp"
            android:background="@drawable/shape_btn_bluehei"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_offset_40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_offset_30dp"
                    android:text="总资产(USDT)"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_888888"
                    android:textSize="@dimen/item_offset_14sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_offset_26dp"
                    android:layout_marginLeft="@dimen/item_offset_5dp"
                    android:background="@drawable/shape_btn_273b5d">


                    <ImageView
                        android:layout_marginLeft="@dimen/item_offset_9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/img_hg_12"/>

                    <TextView
                        android:id="@+id/tv_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LV.1"
                        android:layout_marginLeft="@dimen/item_offset_2dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_FFBE0A"
                        android:layout_marginRight="@dimen/item_offset_9dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_totlenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈0.0000"
                android:layout_marginTop="@dimen/item_offset_20dp"
                android:layout_marginLeft="@dimen/item_offset_30dp"
                android:textColor="@color/white"
                android:textSize="@dimen/item_offset_18sp" />




        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="租赁资产"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:layout_marginTop="@dimen/item_offset_10dp"
        android:layout_marginBottom="@dimen/item_offset_10dp"
        android:textSize="@dimen/item_offset_15sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/lease_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>