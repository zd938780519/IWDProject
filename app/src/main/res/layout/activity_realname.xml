<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_061625">
    <include layout="@layout/include_toolbar"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_offset_40dp"
        android:background="@color/color_131e31"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:gravity="center"
        android:orientation="vertical">



    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:inputType="text"
        android:textSize="@dimen/item_offset_15sp"
        android:textColor="@color/white"
        android:textColorHint="@color/color_888888"
        android:hint="真实姓名" />




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:background="@drawable/shape_btn_blue"/>




    <RelativeLayout
        android:id="@+id/rl_idcard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_offset_40dp"
        android:background="@color/color_131e31"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_offset_15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_888888"
            android:text="身份证件"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_offset_15dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_xl_2"/>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:background="@color/white"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_offset_40dp"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:background="@color/color_131e31"
        android:gravity="center"
        android:orientation="vertical">



        <EditText
            android:id="@+id/et_idcardnum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/item_offset_15sp"
            android:background="@null"
            android:textColor="@color/white"
            android:textColorHint="@color/color_888888"
            android:inputType="text"
            android:hint="证件号码" />




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:background="@drawable/shape_btn_blue"/>


</LinearLayout>