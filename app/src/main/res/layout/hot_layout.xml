<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_offset_5dp"
    android:background="@color/color_131e31">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_hot"
        android:layout_marginTop="@dimen/item_offset_12dp"
        android:layout_marginBottom="@dimen/item_offset_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:layout_marginRight="@dimen/item_offset_15dp"
        android:background="@mipmap/banner_4"/>

</LinearLayout>