<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_061625">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@mipmap/bg_14">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_offset_20dp"
                android:layout_alignParentLeft="true"
                >

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:src="@mipmap/nav_back_3"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/item_offset_15dp" />

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="无人机租赁(IWD)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/item_offset_17sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_left" />
            </RelativeLayout>



        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/item_offset_100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_offset_15dp"
            android:layout_marginLeft="@dimen/item_offset_15dp"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_btn_bluehei"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coinname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IWD资产"
                android:layout_marginTop="@dimen/item_offset_15dp"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/item_offset_14sp"
                />


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/item_offset_12dp"
                android:textSize="@dimen/item_offset_18sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_offset_30dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近七天收益(IWD)"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/item_offset_14sp" />



                    <TextView
                        android:id="@+id/tv_seven"
                        android:layout_marginTop="@dimen/item_offset_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_offset_15sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计收益(30天/IWD)"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/item_offset_14sp" />



                    <TextView
                        android:id="@+id/tv_thirty"
                        android:layout_marginTop="@dimen/item_offset_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/item_offset_15sp" />

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_lease"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/item_offset_40dp"
                android:layout_marginLeft="@dimen/item_offset_100dp"
                android:layout_marginRight="@dimen/item_offset_100dp"
                android:background="@drawable/shape_btn_blue"
                android:layout_marginBottom="@dimen/item_offset_18dp"
                android:gravity="center"
                android:layout_height="@dimen/item_offset_30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="租赁"
                    android:textColor="@color/white"
                    android:textSize="@dimen/item_offset_14sp"
                    />

            </LinearLayout>






        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:layout_marginTop="@dimen/item_offset_10dp"
        android:layout_marginBottom="@dimen/item_offset_10dp"
        android:textSize="@dimen/item_offset_15sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/lease_messagerecycle"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/item_offset_15dp"
        android:layout_marginRight="@dimen/item_offset_15dp"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>