<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_061625">

    <include
        android:layout_marginTop="@dimen/item_offset_20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/include_toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/xinwen"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_offset_50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="U Space兑换usdt和iwd"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_offset_15dp"
                    android:textColor="@color/color_6362EB"
                    android:textSize="@dimen/item_offset_15sp" />


                <ImageView
                    android:id="@+id/iv_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/img_an_100"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>