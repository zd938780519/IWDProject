                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="@dimen/item_offset_15dp"-->
                <!--android:textSize="@dimen/item_offset_13sp"-->
                <!--/>-->

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="@dimen/item_offset_15dp"
            android:layout_marginLeft="@dimen/item_offset_15dp"
            android:background="@color/color_888888"/>










        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_offset_44dp">


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_offset_15dp"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/item_offset_16sp"
                />




            <TextView
                android:id="@+id/et_coinnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/item_offset_16dp"
                android:textSize="@dimen/item_offset_13sp"
                />


            <!--<EditText-->
                <!--android:id="@+id/et_coinnum"-->
                <!--android:layout_toRightOf="@+id/tv_num"-->
                <!--android:layout_marginLeft="@dimen/item_offset_18dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@null"-->
                <!--android:inputType="numberDecimal"-->
