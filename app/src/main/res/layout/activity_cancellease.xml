                <!--/>-->

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="@dimen/item_offset_15dp"
            android:layout_marginLeft="@dimen/item_offset_15dp"
            android:background="@color/color_888888"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_offset_44dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_baifenlv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USDT租赁解约需扣5%的手续费"
                android:layout_marginLeft="@dimen/item_offset_15dp"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/item_offset_14sp"
                />

        </LinearLayout>



    </LinearLayout>




    <LinearLayout
        android:id="@+id/ll_clease"
        android:layout_width="@dimen/item_offset_150dp"
        android:layout_height="@dimen/item_offset_30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_offset_40dp"
        android:gravity="center"
        android:background="@drawable/shape_btn_blue">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消租赁"
            android:textColor="@color/white"
            android:textSize="@dimen/item_offset_14sp" />

    </LinearLayout>



</LinearLayout>