<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_131e31">


        <com.example.project.iwdproject.widget.BannerLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:background="@mipmap/banner_2"
            app:layout_scrollFlags="scroll|enterAlways"
            app:autoPlayDuration="5000"

            app:defaultImage="@mipmap/banner_2"
            android:layout_marginLeft="@dimen/item_offset_10dp"
            android:layout_marginRight="@dimen/item_offset_10dp"
            app:indicatorMargin="10dp"
            app:indicatorPosition="centerBottom"
            app:indicatorShape="oval"
            app:indicatorSpace="3dp"
            app:scrollDuration="900"
            app:selectedIndicatorColor="?attr/colorPrimary"
            app:selectedIndicatorHeight="6dp"
            app:selectedIndicatorWidth="6dp"
            app:unSelectedIndicatorColor="#99ffffff"
            app:unSelectedIndicatorHeight="6dp"
            app:unSelectedIndicatorWidth="6dp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_offset_28dp"
        android:gravity="center_vertical"
        android:background="@color/color_131e31">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_offset_15dp"
            android:background="@mipmap/icon_gg_1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USpace IWD无人机信息采集租赁开始啦！"
            android:layout_marginLeft="@dimen/item_offset_8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/item_offset_11sp" />
    </LinearLayout>


</LinearLayout>