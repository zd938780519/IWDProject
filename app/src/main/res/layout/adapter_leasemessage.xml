<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_offset_52dp"
       >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_offset_11dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100.00"
                    android:textColor="@color/color_6362EB"
                    android:textSize="@dimen/item_offset_16sp" />


                <TextView
                    android:id="@+id/tv_coinname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USDT"
                    android:textColor="@color/color_888888"
                    android:layout_marginLeft="@dimen/item_offset_14dp"
                    android:textSize="@dimen/item_offset_14sp"
                    />


            </LinearLayout>



            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_offset_6dp"
                android:text="2019-02-03 14:23:12"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/item_offset_12sp"
                />
        </LinearLayout>



        <!--<TextView-->
            <!--android:id="@+id/tv_zengfu"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="-125"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="@dimen/item_offset_12dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/item_offset_13sp" />-->



        <LinearLayout
            android:id="@+id/ll_cancel"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/item_offset_74dp"
            android:layout_height="@dimen/item_offset_27dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/shape_btn_blue8">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已取消"

                android:textColor="@color/white"
                android:textSize="@dimen/item_offset_13dp"
                />

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>